<project name="UniManager" default="dist" basedir=".">
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dist" location="dist"/>
    <property name="lib" location="lib"/>
    <property name="DatePicker" value="jdatepicker-1.3.4.jar"/>
    <property name="JdbcDriver" value="mysql-connector-j-8.0.33.jar"/>
    <target name="init">
        <tstamp/>
        <mkdir dir="${build}"/>
    </target>
    
    <target name="compile" depends="init" description="compile the source">
    <javac srcdir="${src}" destdir="${build}"/>
    </target>

    <target name="dist" depends="compile" description="generate the distribution">
    <mkdir dir="${dist}"/>

    <jar jarfile="${dist}/UniManager.jar" basedir="${build}">
        <manifest>
            <attribute name="Main-Class" value="com.tetradlazydragons.RegForm"/>
            <attribute name="Class-Path-Date" value="${DatePicker}"/>
            <attribute name="Class-Path-Jdbc" value="${JdbcDriver}"/>
        </manifest>
    </jar>

    <copy file="${lib}\${DatePicker}" todir="${dist}" overwrite="true" />
    <copy file="${lib}\${JdbcDriver}" todir="${dist}" overwrite="true" />

    </target>

    <target name="clean" description="clean up">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>
</project>