<project name="UniManager" default="dist" basedir=".">
 
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="lib" location="lib"/>
  <!--<property name="DatePicker" value="jdatepicker-1.3.4.jar"/>-->
 
  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>
 
  <target name="compile" depends="init" description="compile the source">
    <javac srcdir="${src}" destdir="${build}"/>
  </target>
 
  <target name="dist" depends="compile" description="generate the distribution">
    <mkdir dir="${dist}"/>
 
    <jar jarfile="${dist}/Uni Manager.jar" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="com.tetradlazydragons.RegForm"/>
                <!--<attribute name="Class-Path" value="${DatePicker}"/>-->
            </manifest>   
    </jar>
    <!--<copy file="${lib}\${DatePicker}" todir="${dist}" overwrite="true" />-->
  </target>
 
  <target name="clean" description="clean up">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>